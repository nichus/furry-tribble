<!doctype html> 
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge;chrome=1" />
  <title><%= page_title %></title>
  <meta name="description" content="<%= page_description %>" />
  <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>
  <!--[if lt IE 9]><script src="/js/ie8.js" type="text.javascript"></script><![endif]-->
  <%= stylesheet_link_tag "all" %>
  <link rel="alternate" hreflang="en"        href="<%= current_page.url %>" />
  <link rel="alternate" hreflang="x-default" href="<%= current_page.url %>" />
  <link rel="icon" type="image/png" href="/favicon.png" />
  <%= partial "partials/analytics" %>
  <%= javascript_include_tag "//google-code-prettify.googlecode.com/svn/loader/run_prettify.js?skin=desert" %>
</head>
<body>
  <%= partial "partials/header" %>
  <div id="main" class="container">
    <article>
      <% unless current_article.nil? -%>
      <h1><%= current_article.title %></h1>
      <% current_article.tags.each do |tag| -%>
	<small class="label label-default"><%= tag %></small>
      <% end %>
      <hr />
      <p>
	<i class="fa fa-clock-o fa-small"></i> Posted on <%= current_article.date.strftime('%b %e') %>
      </p>
      <hr />
      <% if current_article.data.image_src -%>
      <img class="img-responsive" src="<%=current_article.data.image_src %>" />
      <hr />
      <% end -%>
      <% end -%>
      <%= yield %>
    </article>
    <nav>
      <%= partial "partials/sidebar" %>
    </nav>
    <aside>
    </aside>
  </div>
  <footer>
    <%= partial "partials/footer" %>
  </footer>
  <%= javascript_include_tag  "all" %>
</body>
</html>
