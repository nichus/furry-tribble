<!doctype html> 
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge;chrome=1" />
  <title><%= page_title %></title>
  <meta name="description" content="<%= page_description %>" />
  <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>
  <!--[if lt IE 9]><script src="/js/ie8.js" type="text.javascript"></script><![endif]-->
  <%= stylesheet_link_tag "all" %>
  <link rel="icon" type="image/png" href="/favicon.png" />
  <%= partial "partials/analytics" %>
  <%= javascript_include_tag "https://cdn.rawgit.com/google/code-prettify/master/loader/run_prettify.js?skin=desert" %>
</head>
<body>
  <%= partial "partials/header" %>
  <div id="main" class="container">
    <article>
      <% unless current_article.nil? -%>
      <h1><%= current_article.title %></h1>
      <p>
	<i class="fa fa-clock-o fa-small"></i> Posted on <%= current_article.date.strftime('%Y-%m-%d') %>
	<span class="g-plusone" data-size="small" data-annotation="none" data-href="<%= current_article.url %>"></span>
      </p>
      <% current_article.tags.each do |tag| -%>
	<small class="label label-default"><%= tag %></small>
      <% end %>
      <hr />
      <% if current_article.data.image_src -%>
      <img class="img-responsive" src="<%=current_article.data.image_src %>" />
      <hr />
      <% end -%>
      <script type="application/ld+json">
      {
	"@context": "http://schema.org",
	"@type": "Blog",
	"@id": "<%= current_article.url %>",
	"headline": "<%= current_article.title %>",
	"image": "<%= current_article.data.image_src %>",
	"datePublished": "<%= current_article.date %>",
	"description": "<%= page_description %>",
	"articleBody": "<%= current_article.body %>"
      }
      </script>
      <% end -%>
      <%= yield %>
    </article>
    <nav>
      <%= partial "partials/sidebar" %>
      <%= partial "partials/sidebar_blog" %>
    </nav>
    <aside>
    </aside>
  </div>
  <footer>
    <%= partial "partials/footer" %>
  </footer>
  <%= javascript_include_tag  "all" %>
</body>
</html>
